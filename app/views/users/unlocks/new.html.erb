<div class="center">
<%= bootstrap_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <div class="alert alert-warning"><%= devise_error_messages! %></div>
  <div class="jumbotron bg3">
    <h1 class="display-1 center">Account locked</h1>
    <p class="lead">Unlock your account?</p>
  </div>
  <%= f.email_field :email, autofocus: true %>
  <%= f.submit "Resend unlock instructions" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>
