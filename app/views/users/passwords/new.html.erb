<div class="center">
<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="alert alert-warning"><%= devise_error_messages! %></div>
  <div class="jumbotron bg3">
    <h1 class="display-1 center">Password change</h1>
    <p class="lead">You requested a password change</p>
  </div>
  <%= f.email_field :email, autofocus: true %>
  <%= f.submit "Send me reset password instructions" %>
<% end %>

<%= render "users/shared/links" %>
</div>