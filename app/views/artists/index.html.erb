<p id="notice"><%= notice %></p>
  <div align="center">
  <h1>Artists</h1>
  <table>
    <thead>
      <tr>
        <th>Image url</th>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @artists.each do |artist| %>
        <tr>
          <td><img width="100" src="<%= artist.image_url %>"/> </td>
          <td><%= artist.name %></td>
          <td><%= link_to 'Show', artist %></td>
          <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
          <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Artist', new_artist_path %>
</div>