<div class="center">
  <%= bootstrap_form_for(artist) do |f| %>
    <% if artist.errors.any? %>
      <div class="alert alert-danger">
        <h2><%= pluralize(artist.errors.count, "error") %> prohibited this character from being saved:</h2>
        <ul>
        <% artist.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="jumbotron bg3">
      <h1 class="display-1 center"><%= action_name.capitalize%> Character</h1>
      <p class="lead"><%= action_name.capitalize%> Mythological character!</p>
    </div>
    <%= f.text_field :name %>
    <%= f.text_area :description %>
    <small>Insert the country of origin of the legend to see it marked in map <a href="https://fusiontables.google.com/data?docid=1N2LBk4JHwWpOY4d9fobIn27lfnZ5MDy-NoqqRpk&pli=1#rows:id=1">(Search here if you are unsure about the name)</a> </small>
    <%= f.text_field :country_of_origin %>
    <%= f.url_field :image_url %>
    <div class="btn-group btn-group-lg" role="group" aria-label="...">
      <%= f.submit action_name.capitalize+" Character"%>
      <%= link_to 'Back', artists_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>